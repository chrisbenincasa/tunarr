{
    "compilerOptions": {
        "target": "es2022",
        "module": "node16",
        "lib": [
            "ES2022"
        ],
        "declaration": true,
        "moduleResolution": "node16",
        "rootDir": ".",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*.ts",
        "__tests__/**/*"
    ],
    "exclude": [
        "./**/*.test.ts",
        "./build/**"
    ]
}