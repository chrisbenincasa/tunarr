{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build-dev": {
      "dependsOn": ["^build"]
    },
    "clean-build": {
      "dependsOn": ["^build"]
    },
    "bundle": {
      "dependsOn": ["^bundle", "@tunarr/server#typecheck"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    }
  }
}
