{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"]
    },
    "build-dev": {},
    "lint": {},
    "lint-fix": {},
    "dev": {
      "dependsOn": ["@tunarr/types#build", "@tunarr/shared#build"],
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
