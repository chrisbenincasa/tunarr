{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "clean": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"]
    },
    "bundle": {
      "dependsOn": ["clean", "build"],
      "outputs": ["build/**", "dist/**"]
    },
    "build-dev": {},
    "lint": {},
    "lint-fix": {},
    "dev": {
      "dependsOn": ["@tunarr/shared#build", "@tunarr/types#build"],
      "cache": false,
      "persistent": true
    }
  }
}
