{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "bundle": {
      "dependsOn": ["clean", "build"],
      "outputs": ["build/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["clean", "@tunarr/shared#build", "@tunarr/types#build"],
      "cache": false,
      "persistent": true
    }
  }
}
