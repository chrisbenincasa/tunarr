{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "generate-db-cache": {
      "dependsOn": ["^build"]
    },
    "bundle": {
      "dependsOn": ["generate-db-cache", "typecheck"]
    },
    "build-dev": {
      "dependsOn": ["^build"]
    },
    "make-exec": {
      "dependsOn": ["bundle"],
      "outputs": ["build/**", "dist/**"]
    },
    "make-exec:windows": {
      "dependsOn": ["bundle"],
      "outputs": ["build/**", "dist/**"]
    }
  }
}
