{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "generate-db-cache": {
      "dependsOn": ["^bundle"],
      "outputs": ["temp/metadata.json"]
    },
    "bundle": {
      "inputs": ["./scripts/bundle.ts"],
      "dependsOn": ["^build", "^bundle"],
      "outputs": ["dist/**"]
    },
    "build-dev": {
      "dependsOn": ["^build"]
    },
    "make-exec-base": {
      "dependsOn": ["bundle", "@tunarr/web#bundle"],
      "outputs": ["build/**"]
    },
    "make-exec:linux": {
      "dependsOn": ["make-exec-base"]
    },
    "make-exec:linux-x64": {
      "dependsOn": ["make-exec-base"]
    },
    "make-exec:linux-arm64": {
      "dependsOn": ["make-exec-base"]
    },
    "make-exec:windows": {
      "dependsOn": ["make-exec-base"]
    },
    "make-exec:macos": {
      "dependsOn": ["make-exec-base"]
    },
    "make-exec-bun": {
      "dependsOn": ["^bundle", "@tunarr/web#bundle"],
      "outputs": ["dist/**"]
    },
    "lint-staged": {},
    "lint": {
      "dependsOn": ["lint-staged"]
    },
    "make-web-vfs": {},
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["make-web-vfs"]
    }
  }
}
