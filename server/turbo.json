{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {},
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "bundle": {
      "inputs": ["./scripts/bundle.ts", "./src/**"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build-dev": {
      "dependsOn": ["^build"]
    },
    "make-bin": {
      "dependsOn": ["@tunarr/web#bundle", "bundle"],
      "outputs": ["bin/**"]
    },
    "lint-staged": {},
    "lint": {
      "dependsOn": ["lint-staged"]
    },
    "dev": {
      "dependsOn": ["@tunarr/shared#build"],
      "persistent": true,
      "cache": false,
      "interruptible": true
    },
    "generate-openapi": {
      "inputs": ["./src/**"],
      "dependsOn": ["^build"]
    }
  }
}
