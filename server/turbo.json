{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "generate-db-cache": {
      "dependsOn": ["^bundle"],
      "outputs": ["temp/metadata.json"]
    },
    "bundle": {
      "inputs": ["./scripts/bundle.ts"],
      "dependsOn": ["^build", "^bundle", "make-web-vfs"],
      "outputs": ["dist/bin/**"]
    },
    "build-dev": {
      "dependsOn": ["^build"]
    },
    "make-exec": {
      "dependsOn": ["^bundle", "@tunarr/web#bundle", "make-web-vfs"],
      "outputs": ["dist/**"]
    },
    "lint-staged": {},
    "lint": {
      "dependsOn": ["lint-staged"]
    },
    "make-web-vfs": {
      "dependsOn": ["@tunarr/web#bundle"],
      "outputs": ["src/generated/web-imports.ts"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["make-web-vfs"]
    }
  }
}
