{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "generate-db-cache": {
      "dependsOn": ["^bundle"],
      "outputs": ["temp/metadata.json"]
    },
    "bundle": {
      "inputs": ["./scripts/bundle-old.ts"],
      "dependsOn": ["^build", "^bundle"],
      "outputs": ["dist/**"]
    },
    "build-dev": {
      "dependsOn": ["^build"]
    },
    "make-bin": {
      "dependsOn": ["bundle"],
      "outputs": ["dist/bin/**"]
    },
    "lint-staged": {},
    "lint": {
      "dependsOn": ["lint-staged"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
