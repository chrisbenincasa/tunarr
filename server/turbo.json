{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "typecheck": {
      "dependsOn": ["^build", "generate-db-cache"]
    },
    "generate-db-cache": {
      "dependsOn": ["^build"],
      "outputs": ["temp/metadata.json"]
    },
    "bundle": {
      "dependsOn": ["generate-db-cache", "typecheck", "^bundle"]
    },
    "build-dev": {
      "dependsOn": ["^build"]
    },
    "make-exec": {
      "dependsOn": ["bundle"],
      "outputs": ["build/**", "dist/**"]
    },
    "make-exec:windows": {
      "dependsOn": ["bundle"],
      "outputs": ["build/**", "dist/**"]
    },
    "lint-staged": {},
    "lint": {
      "dependsOn": ["lint-staged"]
    }
  }
}
