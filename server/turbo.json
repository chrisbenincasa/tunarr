{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "generate-db-cache": {
      "dependsOn": ["^bundle"],
      "outputs": ["temp/metadata.json"]
    },
    "bundle": {
      "inputs": ["./scripts/bundle.ts", "./src/**"],
      "dependsOn": ["^build", "^bundle", "@tunarr/web#bundle"],
      "outputs": ["dist/**"]
    },
    "build-dev": {
      "dependsOn": ["^build"]
    },
    "make-bin": {
      "cache": false,
      "dependsOn": ["bundle"],
      "outputs": ["bin/**"]
    },
    "lint-staged": {},
    "lint": {
      "dependsOn": ["lint-staged"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "interruptible": true
    },
    "generate-openapi": {
      "inputs": ["./src/**"],
      "dependsOn": ["^build"]
    }
  }
}
