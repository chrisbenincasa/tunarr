{
  "name": "server",
  "version": "1.0.0",
  "description": "Create LiveTV channels from your Plex media",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "vitest",
    "package": "sh ./make_dist.sh",
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon -e ts --watch . --watch index.ts --ignore build/ -e .json,.ts,.yml,.yaml,.js -x ts-node-esm -r tsconfig-paths/register --files --project tsconfig.build.json index.ts --inspect=4321",
    "buildw": "nodemon -e ts --watch . --watch index.ts --ignore build/ -e .json,.ts,.yml,.yaml,.js -x tsc --project tsconfig.build.json",
    "debug": "nodemon --ignore build/ -e .json,.ts,.yml,.yaml,.js --exec \"node --inspect-brk=0.0.0.0:4321 --loader ts-node/esm ./index.ts\"",
    "mikro-orm": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' mikro-orm",
    "dizquetv": "ts-node-esm index.ts"
  },
  "type": "module",
  "main": "index.ts",
  "author": "chrisbenincasa",
  "license": "Zlib",
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/middie": "^8.3.0",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.1",
    "@fastify/swagger-ui": "^2.0.1",
    "@mikro-orm/better-sqlite": "^6.0.1",
    "@mikro-orm/core": "^6.0.1",
    "JSONStream": "1.0.5",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.1.1",
    "body-parser": "^1.19.0",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dizquetv-types": "workspace:*",
    "duration": "link:dayjs/plugin/duration",
    "express-fileupload": "^1.2.1",
    "fast-json-stringify": "^5.9.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "fastify-print-routes": "^2.2.0",
    "fastify-type-provider-zod": "^1.1.9",
    "fluent-ffmpeg": "^2.1.2",
    "lodash-es": "^4.17.21",
    "lowdb": "^6.1.1",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-graceful-shutdown": "1.1.0",
    "node-schedule": "^2.1.1",
    "node-ssdp": "^4.0.0",
    "random-js": "2.1.0",
    "reflect-metadata": "^0.1.13",
    "serve-static": "^1.15.0",
    "tslib": "^2.6.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xml-writer": "^1.7.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "bin": "dist/index.js",
  "devDependencies": {
    "@mikro-orm/cli": "^6.0.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.20",
    "@types/express-fileupload": "^1.4.3",
    "@types/fluent-ffmpeg": "^2.1.23",
    "@types/lodash-es": "^4.17.10",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.9",
    "@types/node-cache": "^4.2.5",
    "@types/node-schedule": "^2.1.3",
    "@types/serve-static": "^1.15.4",
    "@types/uuid": "^9.0.6",
    "@types/yargs": "^17.0.29",
    "copyfiles": "^2.2.0",
    "del-cli": "^3.0.0",
    "nexe": "^4.0.0-rc.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-essentials": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsify": "^5.0.4",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "vitest": "^0.34.6"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  }
}
