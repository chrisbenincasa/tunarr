    "node-ssdp": "^4.0.0",
    "p-queue": "^8.0.1",
    "pino": "^9.0.0",
    "pino-pretty": "^11.2.2",
    "pino-roll": "^1.1.0",
    "random-js": "2.1.0",
    "reflect-metadata": "^0.2.2",
    "retry": "^0.13.1",
    "ts-pattern": "^5.4.0",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rollup/plugin-swc": "^0.4.0",
    "@types/archiver": "^6.0.2",
    "@types/async-retry": "^1.4.8",
    "@types/bun": "^1.2.0",
    "@types/lodash-es": "4.17.9",
    "@types/node": "22.10.7",
    "@types/node-schedule": "^2.1.3",
    "@types/retry": "^0.12.5",
    "@types/tmp": "^0.2.6",
    "@types/unzip-stream": "^0.3.4",
    "@types/uuid": "^9.0.6",
    "@types/yargs": "^17.0.29",
    "bun-plugin-pino": "^1.2.0",
    "bun-types": "^1.2.1",
    "copyfiles": "^2.2.0",
    "cross-env": "^7.0.3",
    "del-cli": "^3.0.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "fast-glob": "^3.3.2",
    "globals": "^15.0.0",
    "kysely-ctl": "^0.9.0",
    "make-vfs": "^1.0.15",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "thread-stream": "^3.1.0",
    "tmp": "^0.2.1",
    "tmp-promise": "^3.0.3",
