{
  "name": "@tunarr/server",
  "version": "0.18.10",
  "description": "Create LiveTV channels from your Plex media",
  "license": "Zlib",
  "private": true,
  "author": "chrisbenincasa",
  "type": "module",
  "main": "src/index.ts",
  "bin": "dist/index.js",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 tsc -p tsconfig.build.json",
    "build-dev": "cross-env NODE_ENV=development tsc -p tsconfig.build.json --noEmit --watch",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "bundle": "dotenv -- bun run ./scripts/bundle.ts",
    "make-web-vfs": "bun run scripts/make-web-vfs",
    "clean": "rimraf --glob ./build/ ./dist/ ./src/generated/web-imports.ts ./src/generated/web-imports.js",
    "debug": "dotenv -e .env.development -- bun --watch --inspect-wait run src/index.ts",
    "dev": "dotenv -e .env.development -- bun --watch run src/index.ts",
    "kysely": "dotenv -e .env.development -- kysely",
    "make-exec": "dotenv -- bun run scripts/make-exec.ts",
    "preinstall": "npx only-allow pnpm",
    "run-fixer": "dotenv -e .env.development -- bun run src/index.ts fixer",
    "tunarr": "dotenv -e .env.development -- bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/static": "^8.0.1",
    "@fastify/swagger": "^9.0.1",
    "@iptv/xmltv": "^1.0.1",
    "@scalar/fastify-api-reference": "^1.25.106",
    "@tunarr/playlist": "^1.1.0",
    "@tunarr/shared": "workspace:*",
    "@tunarr/types": "workspace:*",
    "archiver": "^7.0.1",
    "async-mutex": "^0.5.0",
    "async-retry": "^1.3.3",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "cron-parser": "^4.9.0",
    "dayjs": "^1.11.10",
    "fast-xml-parser": "^4.3.5",
    "fastify": "^5.0.0",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-plugin": "^5.0.1",
    "fastify-print-routes": "^3.2.0",
    "fastify-type-provider-zod": "^4.0.1",
    "file-type": "^19.6.0",
    "inversify": "^6.2.1",
    "kysely": "^0.27.4",
    "lodash-es": "^4.17.21",
    "lowdb": "^7.0.0",
    "node-cache": "^5.1.2",
