{
  "$schema": "https://raw.githubusercontent.com/release-it/release-it/refs/heads/main/schema/release-it.json",
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "bumpStrict": true
    },
    "@release-it/bumper": {
      "out": {
        "file": [
          "server/package.json",
          "web/package.json",
          "shared/package.json",
          "types/package.json"
        ],
        "path": "version"
      }
    }
  },
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "npm": {
    "skipChecks": true,
    "publish": false
  }
}
